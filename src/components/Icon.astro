---
export interface Props {
  icon:
    | "right-arrow"
    | "hamburger-menu"
    | "map-pin"
    | "facebook"
    | "instagram"
    | "twitter"
    | "youtube"
    | "left-arrow";
}

const { icon, ...attributes } = Astro.props;
const { default: innerHTML } = await import(`/public/icons/${icon}.svg?raw`);
---

<Fragment {...attributes} set:html={innerHTML} />
